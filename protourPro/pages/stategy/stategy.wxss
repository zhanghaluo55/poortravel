.header {
  background: #3CB371;
  display: flex;
  padding: 50rpx 50rpx;
  position: relative;
  flex-direction: column;
}
.title {
  display: flex;
 flex-direction: row;
}
.address {
  color: #fff;
  font-size: 50rpx;
  line-height: 56rpx;
  padding-right: 10rpx;
}
.heat{
  color:white;
  font-size:30rpx;
  padding-left: 200rpx
}


.stategy-list{
    width:100%;
    display:flex;
    flex-direction:row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.stategy-list-item{
    width:280rpx;
    display: flex;
    flex-direction: column;
    padding: 10px 10px;
}

.photo{
    width:300rpx;
    height:230rpx;
    border-radius: 10rpx;
    background: #aaaaaa;
}

.site{
    font-size: 12px;
    line-height: 16px;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding: 5px 10px;
    font-weight: bold;
    overflow: hidden;
    
    display: flex;
    align-items: center;
    justify-content: center;

}

.music-author{
    font-size: 12px;
    color:#929292;
    line-height: 16px;
}

.i-tags{
