<!--pages/company/company.wxml-->
<form bind:submit="formSubmit" bind:reset="formReset">
	<view class="content">
		<view class="hr"></view>
		<view class="item">
			<input type="text" name='username' placeholder="请设置4--20位用户名" placeholder-class="holder" bind:blur="accountblur" />
		</view>
		<view class="item flex">
			<input type="text" password="{{true}}" name='password' placeholder="请设置6--20位密码" placeholder-class="holder" />
			<!-- <switch type="switch" name='switch' /> -->
		</view>
		<view class="item">
			<input type="text" name='email' placeholder="请输入邮箱" placeholder-class="holder"/>
		</view>
		<view class="item">
			<input type="text" name='nickname' placeholder="联系人昵称" placeholder-class="holder"/>
		</view>
		<view class="mobileInfo">
			<view class="mobile">
				<input type="text" name='airphone' placeholder="请输入手机号" placeholder-class="holder" />
			</view>
			<view class="code">发送验证码</view>
		</view>
		<view class="item">
				<input type="text" name='code' placeholder="短信验证码" placeholder-class="holder" />
		</view>
		<button class="btn" type="{{btnstate}}" disabled="{{disabled}}" form-type="submit">
			注册
		</button>
		<view class="xieyi">
			<text class="agree">注册即视为同意协议</text>
			<text class="opinion">《用户注册协议》</text>
		</view>
	</view>
</form>