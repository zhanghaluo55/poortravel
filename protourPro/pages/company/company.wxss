/* pages/company/company.wxss */
.content {
	width: 100%;
	height: 700px;
	background-color: #f2f2f2;
}

.hr {
	padding-top: 40px;
}

.item {
	margin: 0 auto;
	border: 1px solid #ccc;
	height: 40px;
	width: 90%;
	border-radius: 3px;
	background-color: #fff;
	margin-bottom: 15px;
}

.item input {
	height: 40px;
	line-height: 40px;
	margin-left: 10px;
}

.holder {
	font-size: 14px;
	color: #999;
}

.flex {
	display: flex;
	flex-direction: row;
}

.flex input {
	width: 300px;
}

.item switch {
	margin-top: 5px;
	margin-right: 5px;
}

.mobileInfo {
	display: flex;
	flex-direction: row;
}

.mobile {
	margin: 0 auto;
	border: 1px solid #ccc;
	height: 40px;
	width: 50%;
	border-radius: 3px;
	background-color: #fff;
	margin-bottom: 15px;
	display: flex;
	flex-direction: row;
	margin-left: 5%;
}

.mobile input {
	margin-top: 8px;
	margin-left: 10px;
}

.code {
	height: 40px;
	line-height: 40px;
	width: 35%;
	border: 1px solid #ccc;
	border-radius: 3px;
	background-color: #efefef;
	text-align: center;
	font-size: 15px;
	color: #999;
	margin-left: 10px;
	margin-bottom: 15px;
	margin-right: 5%;
}

.btn {
	width: 90%;
	color: #999;
	margin-top: 40px;
}

.xieyi {
	margin-top: 15px;
	margin-left: 15px;
	font-size: 13px;
}

.agree {
	margin-left: 5px;
	color: #666;
}

.opinion {
	color: red;
	font-weight: bold;
	text-decoration: underline;
}